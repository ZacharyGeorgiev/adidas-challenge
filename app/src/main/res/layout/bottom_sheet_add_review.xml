<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_review"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:fontFamily="@font/itc_avant_garde_bold"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:letterSpacing="0.15"/>

        <RatingBar
            android:id="@+id/rb_score"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="false"
            android:numStars="5"
            android:stepSize="1"
            android:theme="@style/RatingBar" />

        <EditText
            android:id="@+id/et_text"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:fontFamily="@font/itc_avant_garde_regular"
            android:textSize="15sp"
            android:hint="Write your review here"
            android:textColor="@color/adidas_gray"
            android:importantForAutofill="no"
            android:textCursorDrawable="@null"
            android:inputType="textMultiLine"
            android:imeOptions="actionDone"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_submit"
        android:theme="@style/BlackButton"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/black_ripple_button"
        android:clickable="true"
        android:layout_width="match_parent"
        android:text="@string/submit"
        android:fontFamily="@font/itc_avant_garde_regular"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:letterSpacing="0.17"
        android:drawableEnd="@drawable/ic_white_checkmark"
        android:layout_height="50dp"
        android:focusable="true" />
</LinearLayout>